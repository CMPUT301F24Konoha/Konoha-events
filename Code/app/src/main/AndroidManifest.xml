<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KonohaEvents"
        tools:targetApi="34">

        <!-- Home screen (Launcher) -->
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.KonohaEvents">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Login -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents" />
        <!-- Admin -->
        <activity
            android:name=".AdminActivity"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents" />
        <activity
            android:name=".OrganizerActivity"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents" />
        <activity
            android:name=".CreateEventActivity"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents" />

        <activity
            android:name=".EntrantActivity"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents" />

        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents" />



        <!-- Main Activity -->

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Admin Activities -->
        <activity
            android:name=".AdminProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents"
            android:parentActivityName=".AdminActivity"/>
        <activity
            android:name=".AdminEventActivity"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents"
            android:parentActivityName=".AdminActivity"/>
        <activity
            android:name=".AdminImageActivity"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents"
            android:parentActivityName=".AdminActivity"/>

        <!-- Organizer Activities -->
        <activity
            android:name=".OrganizerViewEventListActivity"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents"
            android:parentActivityName=".OrganizerActivity"/>

        <!-- Organizer/Admin Activities-->
        <activity
            android:name=".EventDetails"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents"/>
        <activity
            android:name=".EventEntrantDetails"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents"/>

    </application>

</manifest>
