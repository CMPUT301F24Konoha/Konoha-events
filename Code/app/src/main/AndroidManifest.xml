<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Location permissions for Entrant geolocation feature -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KonohaEvents"
        tools:targetApi="34">

        <!-- OpenStreetMap config -->
        <meta-data
            android:name="org.osmdroid.config"
            android:resource="@xml/osm_config" />

        <!-- Organizer Map Activity -->
        <activity
            android:name=".OrganizerMapActivity"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents" />

        <!-- Home screen (Launcher) -->
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.KonohaEvents">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents" />

        <!-- Admin Activity -->
        <activity
            android:name=".AdminActivity"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents" />

        <!-- Organizer Activity -->
        <activity
            android:name=".OrganizerActivity"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents" />

        <!-- Create Event Activity -->
        <activity
            android:name=".CreateEventActivity"
            android:exported="true"
            android:theme="@style/Theme.KonohaEvents"
            tools:node="replace"/>

        <!-- Entrant Activity -->
        <activity
            android:name=".EntrantActivity"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents" />

        <!-- Profile Activity -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Entrant Home screen for device-based login -->
        <activity
            android:name=".EntrantHomeActivity"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents" />

        <!-- Entrant Guidline -->
        <activity
            android:name=".GuidelinesActivity"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents" />

        <!-- Entrant Invitations -->
        <activity
            android:name=".EntrantInvitationsActivity"
            android:exported="false"
            android:theme="@style/Theme.KonohaEvents" />
    </application>

</manifest>
