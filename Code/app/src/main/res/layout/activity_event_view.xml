<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_event_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/activity_event_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/activity_event_toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Switch
                    android:id="@+id/activity_event_view_geolocation_toggle_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </Switch>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable Geolocation Tracking">
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/activity_event_view_deadline_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/activity_event_toolbar"
                android:text="[Deadline]">
            </TextView>

            <TextView
                android:id="@+id/activity_event_view_total_on_list_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/activity_event_view_deadline_text"
                android:text="[TOTAL ON LIST]">
            </TextView>

            <TextView
                android:id="@+id/activity_event_view_waiting_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/activity_event_view_total_on_list_text"
                android:text="[WAITING]">
            </TextView>

            <TextView
                android:id="@+id/activity_event_view_selected_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/activity_event_view_waiting_text"
                android:text="[SELECTED]">
            </TextView>

            <TextView
                android:id="@+id/activity_event_view_accepted_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/activity_event_view_selected_text"
                android:text="[ACCEPTED]">
            </TextView>

            <TextView
                android:id="@+id/activity_event_view_declined_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/activity_event_view_accepted_text"
                android:text="[DECLINED]">
            </TextView>

            <TextView
                android:id="@+id/activity_event_view_cancelled_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/activity_event_view_declined_text"
                android:text="[CANCELLED]">
            </TextView>

            <Button
                android:id="@+id/activity_event_view_entrants_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/activity_event_view_cancelled_text"
                android:text="View Entrants">
            </Button>

            <NumberPicker
                android:id="@+id/activity_event_view_number_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </NumberPicker>

            <Button
                android:id="@+id/activity_event_view_draw_from_waitlist_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Draw from Waitlist">
            </Button>

            <ImageView
                android:id="@+id/activity_event_view_poster_image_view"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>

            <Button
                android:id="@+id/activity_event_view_upload_event_poster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Event Poster">
            </Button>

            <Button
                android:id="@+id/activity_event_view_delete_event_poster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Event Poster">
            </Button>

            <Button
                android:id="@+id/activity_event_view_notify_selected_entrants_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notify Selected Entrants">
            </Button>

            <Button
                android:id="@+id/activity_event_view_notify_non_selected_entrants_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notify Non-Selected Entrants">
            </Button>

            <Button
                android:id="@+id/activity_event_view_show_qr_code_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show QR Code">
            </Button>

            <Button
                android:id="@+id/activity_event_view_start_send_notification_menu_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send Notification">

            </Button>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>