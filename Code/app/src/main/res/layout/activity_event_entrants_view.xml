<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_event_entrants_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/activity_event_entrants_button_toggle_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_event_entrants_toolbar">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/activity_event_entrants_wait_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Wait"
            android:checkable="true"
            android:paddingHorizontal="1dp">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/activity_event_entrants_select_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Select"
            android:checkable="true"
            android:paddingHorizontal="1dp">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/activity_event_entrants_accept_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Accept"
            android:checkable="true"
            android:paddingHorizontal="1dp">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/activity_event_entrants_decline_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Decline"
            android:checkable="true"
            android:paddingHorizontal="1dp">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/activity_event_entrants_cancel_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Cancel"
            android:checkable="true"
            android:paddingHorizontal="1dp">
        </com.google.android.material.button.MaterialButton>
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <ListView
        android:id="@+id/activity_event_entrant_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/activity_event_entrants_button_toggle_group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>