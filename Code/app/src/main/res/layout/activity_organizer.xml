<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".OrganizerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:id="@+id/dashboardTitle"
            android:text="@string/organizer_dashboard_title"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnViewEntrantLocations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Entrant Locations"
            android:layout_margin="16dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>


        <!-- Create Event -->
        <Button
            android:id="@+id/createEventButton"
            android:text="@string/create_event"
            android:backgroundTint="#4A90E2"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Manage Events -->
        <Button
            android:id="@+id/activity_organizer_create_event_button"
            android:text="@string/activity_organizer_manage_event_button_text"
            android:backgroundTint="#4A90E2"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>